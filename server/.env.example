# Environment variables for Shoulder IQ Server

# Port for the backend server to run on
# Make sure this matches the target port in client/vite.config.js proxy
SERVER_PORT=3000

# Your Claude API Key - KEEP THIS SECRET AND NEVER COMMIT .env FILE TO GIT
CLAUDE_API_KEY=""

# MongoDB Connection String
MONGODB_URI="mongodb://localhost:27017/shoulderiq_db"

# Mailgun Configuration (API key method, not SMTP)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=mg.websited.org
EMAIL_SENDER_ADDRESS=
EMAIL_RECIPIENT_ADDRESS=
BCC_EMAIL_RECIPIENT_ADDRESS=

# Dashboard Password
DASHBOARD_PASSWORD="Gumtr33s22!"

# Session Secret (for express-session)
SESSION_SECRET=

# Server Base URL (for constructing public links to uploaded files)
# Local development: http://localhost:3000
# Production: https://api.shoulderiq.com.au
SERVER_BASE_URL="http://localhost:3000"

# CORS Configuration (comma-separated list of allowed origins)
# Local development: http://localhost:5173
# Production: https://shoulderiq.com.au,https://www.shoulderiq.com.au
ALLOWED_ORIGINS="http://localhost:5173"

# Cookie Domain (for cross-subdomain authentication)
# Leave empty for local development
# Production: .shoulderiq.com.au
COOKIE_DOMAIN=

# Trust Proxy (set to true when behind reverse proxy like Traefik/nginx)
# Local development: false
# Production: true
TRUST_PROXY=false
